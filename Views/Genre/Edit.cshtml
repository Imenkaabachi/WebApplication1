@{
}
 <h2 class="">Update Genre</h2>
<form class="" asp-action="Update" method="post">
        <div class="input-container">

            <input type="text" class="search-bar" asp-for="GenreName" placeholder="Genre name">
        </div>

    <div class="message-box pd-x-28 error">
        <span asp-validation-for="GenreName"> </span>
    </div






    @if (TempData["msg"] != null)
    {
        <div class="alert-info">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-success" type="submit">Save</button>
        <a class="btn btn-light" href="/Genre/GenreList">All records</a>
    </div>
</form>
