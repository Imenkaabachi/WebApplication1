@model MovieListVm
@{
}
<h2>Moviess</h2>

<table class="table table-striped">



        <tr>
            <th scope="col">Title</th>
            <th scope="col">Genre</th>
            <th scope="col">ReleaseYear</th>
            <th scope="col">Director</th>
            <th scope="col">Action</th>
        </tr>
        @foreach(var item in Model.MovieList){
        <tr>
            <td>@item.Title</td>
                <td>@item.GenreNames</td>
                <td>@item.ReleaseYear</td>
                <td>@item.Director</td>
                <td>
                <a href="/Movie/Edit?id=@item.Id" class="btn btn-outline-success">Update</a>
                <a onclick="return window.confirm('Are you sure?')" href="/Movie/Delete?id=@item.Id" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
        }
     
</table>
    




    <div class="input-container">
        <a href="/Movie/Add" class="btn btn-danger">Back</a>
    </div>
