@model Movie
@{

}
@using (Html.BeginForm("Add", "Movie", FormMethod.Post))
{
    <h2 class="h2">Add Movie</h2>

    <div class="input-container">
        <label asp-for="Title" class="w-40">Title</label>
            @Html.TextBoxFor(m => m.Title, new { @class = "w-60" })
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Title"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Director" class="w-40">Image</label>
        @* <input type="file" asp-for="ImageFile"> *@
        @* @Html.TextBoxFor(m => m.ImageFile, new { @class = "w-60" }) *@
         @Html.TextBoxFor(m => m.ImageFile, new { type = "file", @class = "w-60" })
        
        
      
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="ImageFile"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Genres" class="w-40">Genre</label>
        @* <select asp-items="Model.GenreList" class="input" asp-for="Genres" multiple> *@
        @*     <option value="">--select--</option> *@
        @* </select> *@
        @Html.DropDownListFor(m => m.Genres, Model.GenreList, new { @class = "w-60" })
        
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Genres"> </span>
    </div>

    <div class="input-container">
        <label asp-for="ReleaseYear" class="w-40">Released Year</label>
        @Html.TextBoxFor(m => m.ReleaseYear, new { @class = "w-60" })
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="ReleaseYear"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Cast" class="w-40">Cast</label>
        @Html.TextBoxFor(m => m.Cast, new { @class = "w-60" })
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Cast"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Director" class="w-40">Director</label>
        @Html.TextBoxFor(m => m.Director, new { @class = "w-60" })
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Director"> </span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert-info">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-success" type="submit">Save</button>
        <a class="btn btn-light" href="/Movie/MovieList">All records</a>
    </div>
}